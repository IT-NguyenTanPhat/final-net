@model Job
@{
    ViewData["title"] = Model.Name;
}
<!-- Hero Start -->
<section class="bg-half bg-light d-table w-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12 text-center">
                <div class="page-next-level">
                    <img src="@Model.Company?.Avatar" class="avatar avatar-small" alt="">
                    <h4 class="title mt-4 mb-3"> @Model.Name </h4>
                    <ul class="list-unstyled">
                        <li class="list-inline-item text-primary me-3"><i class="mdi mdi-map-marker text-warning me-2"></i>@Model.Company?.Locaiton</li>
                    </ul>
                    <div class="page-next">
                        <nav aria-label="breadcrumb" class="d-inline-block">
                            <ul class="breadcrumb bg-white rounded shadow mb-0">
                                <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                                <li class="breadcrumb-item"><a href="/jobs">Việc làm</a></li>
                                <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>  <!--end col-->
        </div><!--end row-->
    </div> <!--end container-->
</section><!--end section-->
<!-- Hero End -->

<!-- Shape Start -->
<div class="position-relative">
    <div class="shape overflow-hidden text-white">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>
<!--Shape End-->

<!-- Job Detail Start -->
<section class="section">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 col-12">
                <div class="card sidebar sticky-bar rounded shadow border-0">
                    <div class="card-body widget border-bottom">
                        <h5 class="mb-0">Thông tin chi tiết</h5>
                    </div>

                    <div class="card-body">
                        <div class="d-flex widget align-items-center">
                            <i data-feather="user-check" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-1">Thể loại:</h6>
                                <p class="text-primary mb-0">@Model.Category?.Name</p>
                            </div>
                        </div>

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="map-pin" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-1">Địa điểm:</h6>
                                <p class="text-primary mb-0">@Model.Company?.Locaiton</p>
                            </div>
                        </div>

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="briefcase" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-1">Kinh nghiệm:</h6>
                                @if (Model.Experience == null)
                                {
                                    <p class="text-primary mb-0">Không yêu cầu</p>
                                } else
                                {
                                    <p class="text-primary mb-0">@Model.Experience Năm</p>
                                }
                            </div>
                        </div>

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="dollar-sign" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-1">Lương:</h6>
                                @if (Model.Salary == null)
                                {
                                    <p class="text-primary mb-0">Thương lượng</p>
                                } else
                                {
                                    <p class="text-primary mb-0">@Model.Salary VNĐ</p>
                                }
                            </div>
                        </div>

                        <div class="d-flex widget align-items-center mt-3">
                            <i data-feather="clock" class="fea icon-ex-md me-3"></i>
                            <div class="flex-1">
                                <h6 class="widget-title mb-1">Ngày đăng:</h6>
                                <p class="text-primary mb-0 mb-0">@Model.PostedAt.ToString("dd-MM-yyyy")</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div><!--end col-->

            <div class="col-lg-8 col-md-7 col-12 mt-4 mt-sm-0 pt-2 pt-sm-0">
                <div class="ms-lg-4">
                    @Html.Raw(@Model.Description)

                    <div class="mt-4">
                        <a href="/jobs/1/apply" class="btn btn-outline-primary">Ứng tuyển <i class="mdi mdi-send"></i></a>
                    </div>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
</section><!--end section-->
<!-- Job Detail End -->
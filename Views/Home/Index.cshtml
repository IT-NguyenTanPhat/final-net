@using static timviec.Controllers.HomeController;
@model Database
@{
    ViewData["Title"] = "Trang chủ";
}

<section class="bg-half-170 pb-0 bg-light d-table w-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="title-heading text-center mt-4 mt-md-5 pt-md-5">
                    <div class="alert alert-light alert-pills" role="alert">
                        <span class="badge rounded-pill bg-success me-1">Bắt đầu</span>
                        <span class="content"> <a href="#" class="text-primary">Ứng tuyển</a> ngay !</span>
                    </div>
                    <h1 class="heading mb-3">Tuyển Dụng <span class="text-primary typewrite" data-period="2000" data-type='[ "Freelancer", "Developer", "Designer", "UX Developer", "ios Developer" ]'> <span class="wrap"></span> </span></h1>
                    <form class="rounded p-4 mt-4 bg-white" method="get" action="/jobs">
                        <div class="row text-start">
                            <div class="col-lg-5 col-md-4">
                                <div class="mb-0">
                                    <input type="text" name="key" class="form-control" required placeholder="Từ khóa">
                                </div>
                            </div><!--end col-->

                            <div class="col-lg-7 col-md-8">
                                <div class="row align-items-center">
                                    <div class="col-md-4 mt-4 mt-sm-0">
                                        <div class="mb-0">
                                            <select name="location" class="form-control custom-select">
                                                @foreach (var obj in Model.companies)
                                                {
                                                    @if (obj.Locaiton != null)
                                                    {
                                                        <option>@obj.Locaiton</option>
                                                    }
                                                }
                                            </select>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-4 mt-4 mt-sm-0">
                                        <div class="mb-0">
                                            <select name="category" class="form-control custom-select">
                                                @foreach (var obj in Model.categories)
                                                {
                                                    <option value="@obj.Id">@obj.Name</option>
                                                }
                                            </select>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-md-4 mt-4 mt-sm-0">
                                        <div class="d-grid">
                                            <input type="submit" id="search" class="searchbtn btn btn-primary" value="Tìm kiếm">
                                        </div>
                                    </div><!--end col-->
                                </div><!--end row-->
                            </div> <!---end col-->
                        </div><!--end row-->
                    </form>
                </div>
            </div><!--end col-->

            <div class="col-12 mt-4 pt-3">
                <img src="~/images/banner.png" class="img-fluid" alt="">
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
</section><!--end section-->
<!-- Hero End -->
<!-- Shape Start -->
<div class="position-relative">
    <div class="shape overflow-hidden text-white">
        <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M0 48H1437.5H2880V0H2160C1442.5 52 720 0 720 0H0V48Z" fill="currentColor"></path>
        </svg>
    </div>
</div>
<!--Shape End-->
<!-- Start -->
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <div class="section-title mb-4 pb-2">
                    <h4 class="title mb-4 text-capitalize">Danh mục phổ biến</h4>
                </div>
            </div><!--end col-->
        </div><!--end row-->

        <div class="row">
            @foreach (var obj in Model.categories)
            {
                <div class="col-lg-3 col-md-6 col-12 mt-4 pt-2">
                    <div class="card categories overflow-hidden rounded shadow border-0">
                        <img src="~/images/work/1.jpg" class="img-fluid" alt="">
                        <div class="card-body">
                            <ul class="list-unstyled d-flex justify-content-between mb-0">
                                <li><a href="/jobs?c=@obj.Id" class="title h6 text-dark">@obj.Name</a></li>
                                <li class="h6 mb-0 jobs">@obj.Jobs?.Count Jobs</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!--end col-->
            }
        </div><!--end row-->
    </div><!--end container-->
    <!-- Companies Start -->
    <div class="container mt-100 mt-60">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <div class="section-title mb-4 pb-2">
                    <h4 class="title mb-4 text-capitalize">Việc làm phổ biến</h4>
                </div>
            </div><!--end col-->
        </div><!--end row-->

        <div class="row">
            @foreach (var obj in Model.jobs)
            {
                <div class="col-lg-4 col-md-6 col-12 mt-4 pt-2">
                    <a href="/jobs/@obj.Id">
                        <div class="d-flex key-feature align-items-center p-3 rounded shadow">
                            <img src="@obj.Company?.Avatar" class="avatar avatar-ex-sm" alt="">
                            <div class="flex-1 ms-3">
                                <h4 class="title mb-0 text-dark short-text">@obj.Name</h4>
                                <p class="text-muted mb-0">@obj.Company?.Locaiton</p>
                            </div>
                        </div>
                    </a>
                </div><!--end col-->
            }

            <div class="col-12 text-center mt-4 pt-2">
                <a href="/jobs" class="btn btn-primary">Xem thêm <i class="uil uil-angle-right-b align-middle"></i></a>
            </div>
        </div><!--end row-->
    </div><!--end container-->
    <!-- Companies End -->
    <!-- Candidates Start -->
    <div class="container mt-100 mt-60">
        <div class="row justify-content-center">
            <div class="col-12 text-center">
                <div class="section-title mb-4 pb-2">
                    <h4 class="title mb-4 text-capitalize">nhà tuyển dụng nổi bật</h4>
                </div>
            </div><!--end col-->
        </div><!--end row-->

        <div class="row">
            <div class="col-12 mt-4 pt-2">
                <div class="tns-outer" id="tns1-ow"><div class="tns-liveregion tns-visually-hidden" aria-live="polite" aria-atomic="true">slide <span class="current">4 to 6</span>  of 6</div><div id="tns1-mw" class="tns-ovh"><div class="tns-inner" id="tns1-iw"><div class="tiny-three-item  tns-slider tns-carousel tns-subpixel tns-calc tns-horizontal" id="tns1" style="transform: translate3d(-50%, 0px, 0px);">
                    @foreach (var obj in Model.companies)
                    {
                        <div class="tiny-slide tns-item" id="tns1-item2" aria-hidden="true" tabindex="-1">
                            <div class="card client-testi border-0 text-center">
                                <div class="card-body">
                                    <div class="position-relative">
                                        <img src="@obj.Avatar" class="img-fluid avatar avatar-ex-large rounded-circle shadow mb-2" alt="">
                                        <div class="social-icon team-icon mb-0">
                                            <a href="/companies/@obj.Id" class="rounded btn btn-outline-primary">Xem hồ sơ</a>
                                        </div><!--end icon-->
                                    </div>
                                    <div class="content pt-3 pb-3">
                                        <h5 class="mb-0"><a href="/companies/@obj.Id" class="name text-dark">@obj.Name</a></h5>
                                        <small class="designation text-muted">@obj.Locaiton</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div></div></div></div>
            </div><!--end col-->
        </div>
    </div><!--end container-->

    <div class="container pt-5">
        <div class="row justify-content-center">
            <div class="col-lg-2 col-md-2 col-6 text-center">
                <img src="~/images/client/amazon.svg" class="avatar avatar-ex-sm" alt="">
            </div><!--end col-->

            <div class="col-lg-2 col-md-2 col-6 text-center">
                <img src="~/images/client/google.svg" class="avatar avatar-ex-sm" alt="">
            </div><!--end col-->

            <div class="col-lg-2 col-md-2 col-6 text-center mt-4 mt-sm-0">
                <img src="~/images/client/lenovo.svg" class="avatar avatar-ex-sm" alt="">
            </div><!--end col-->

            <div class="col-lg-2 col-md-2 col-6 text-center mt-4 mt-sm-0">
                <img src="~/images/client/paypal.svg" class="avatar avatar-ex-sm" alt="">
            </div><!--end col-->

            <div class="col-lg-2 col-md-2 col-6 text-center mt-4 mt-sm-0">
                <img src="~/images/client/shopify.svg" class="avatar avatar-ex-sm" alt="">
            </div><!--end col-->

            <div class="col-lg-2 col-md-2 col-6 text-center mt-4 mt-sm-0">
                <img src="~/images/client/spotify.svg" class="avatar avatar-ex-sm" alt="">
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->
    <!-- Testi end -->
</section><!--end section-->
<!-- End -->
